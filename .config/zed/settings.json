// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // ===================
  // Appearance
  // ===================
  "theme": "Catppuccin Mocha",
  "buffer_font_family": "MonaspiceKr Nerd Font Mono",
  "buffer_font_size": 16,
  "ui_font_family": "MonaspiceRn Nerd Font Mono",
  "ui_font_size": 16,
  "ui_font_weight": 700,
  "indent_guides": {
    // インデントに色を表示する
    "enabled": true,
    "background_coloring": "indent_aware"
  },
  // 行番号を相対表示する
  "relative_line_numbers": "enabled",
  "show_wrap_guides": true,
  "wrap_guides": [90],

  // ===================
  // Editor
  // ===================
  "tab_size": 2,
  "soft_wrap": "editor_width",
  "autosave": "on_focus_change",
  "format_on_save": "off",
  "hover_popover_enabled": true,
  "inlay_hints": {
    "enabled": false
  },
  "completion_menu_scrollbar": "auto",
  // Will be triggered manually with `ctrl-x ctrl-c`.
  "show_edit_predictions": false,

  // ===================
  // Vim
  // ===================
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "multi_cursor_modifier": "alt",
  "hide_mouse": "on_typing_and_movement",

  // ===================
  // Panels & UI
  // ===================
  "default_dock_anchor": "expanded",
  "project_panel": {
    // ディレクトリの中に一つしかディレクトリがない場合、ネスト構造にしない
    "auto_fold_dirs": true
  },
  "collaboration_panel": {
    // collaborationは使用しないので非表示
    "button": false
  },
  "chat_panel": {
    // chatは使用しないので非表示
    "button": "never"
  },
  "notification_panel": {
    // notificationは使用しないので非表示
    "button": false
  },
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": false,
    // NOTE: This might change in the future.
    "experimental.show": true
  },
  // 使用しない機能なので非表示
  "show_call_status_icon": false,

  // ===================
  // Tabs
  // ===================
  "tabs": {
    "show_diagnostics": "all",
    "file_icons": true,
    "git_status": true
  },
  "preview_tabs": {
    "enable_preview_from_project_panel": true,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_multibuffer": false,
    "enable_preview_multibuffer_from_code_navigation": false,
    "enable_preview_file_from_code_navigation": false
  },

  // ===================
  // Git
  // ===================
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },

  // ===================
  // Languages & LSP
  // ===================
  "enable_language_server": true,
  "languages": {
    "Go": {
      "enable_language_server": true,
      "format_on_save": "on",
      "tab_size": 4
    },
    "JSON": {
      "format_on_save": "off",
      "formatter": "language_server",
      "use_autoclose": false
    },
    "JSONC": {
      "format_on_save": "off",
      "formatter": "language_server",
      "use_autoclose": false
    },
    "Markdown": {
      "format_on_save": "on"
    }
  },
  "lsp": {
    "gopls": {
      "binary": {
        "path": "/Users/takeuchishougo/go/bin/gopls"
      }
    },
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },

  // ===================
  // Terminal
  // ===================
  "terminal": {
    "copy_on_select": true
  },

  // ===================
  // AI & Features
  // ===================
  "agent": {},
  "features": {
    "edit_prediction_provider": "zed"
  },
  "preview": {
    // previewモードの時はthemeを変更
    "theme": "Andromeda"
  },

  // ===================
  // Session & Privacy
  // ===================
  "session": {
    "trust_all_worktrees": true
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  }
}
